<p id="notice"><%= notice %></p>

<h1>Listing Bases</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bases.each do |basis| %>
      <tr>
        <td><%= basis.name %></td>
        <td><%= basis.location %></td>
        <td><%= link_to 'Show', basis, class: 'btn btn-link' %></td>
        <td><%= link_to 'Edit', edit_basis_path(basis), class: 'btn btn-link' %></td>
        <td><%= link_to 'Destroy', basis, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Base', new_basis_path, class: 'btn btn-link' %>
